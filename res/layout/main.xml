<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:id="@+id/search" android:layout_gravity="center" android:singleLine="true"
                android:hint="Buscar Concierto"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_search"
                android:adjustViewBounds="false"
                android:layout_gravity="center" android:clickable="true" android:background="@drawable/ic_tab_search"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/srcll_results">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/lny_results">

        </LinearLayout>
    </ScrollView>
</LinearLayout>